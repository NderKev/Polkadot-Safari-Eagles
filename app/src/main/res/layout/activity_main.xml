<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#504AFA"
tools:context=".HomeOne">

<LinearLayout
    android:id="@+id/profilesnmenu"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginEnd="0dp"
    android:layout_marginTop="20dp"
    android:layout_alignParentEnd="true">

    <ImageButton
        android:id="@+id/profilepic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@color/transparent"
        android:src="@drawable/ellipsetwo">
    </ImageButton>
    <ImageButton
        android:id="@+id/menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="260dp"
        android:layout_marginEnd="10dp"
        android:background="@color/transparent"
        android:src="@drawable/menu">
    </ImageButton>

</LinearLayout>

<RelativeLayout
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_below="@id/profilesnmenu"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/hello"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/hello" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/hello"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:src="@drawable/johnwills"
        android:textColor="@color/white" />
    <ImageView
        android:id="@+id/usernamewave"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/hello"
        android:layout_marginStart="230dp"
        android:src="@drawable/waving" />

</RelativeLayout>
<RelativeLayout
    android:id="@+id/searchbar"
    android:layout_below="@+id/welcome"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="70dp">

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:drawableLeft="@drawable/groupsixtyeight"
        android:background="@drawable/rectangleonefortysix"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:hint="   Search for a doctor" />
</RelativeLayout>



<LinearLayout
    android:id="@+id/imageslinks"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_below="@id/searchbar"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="0dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/consultation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:background="@color/transparent"
        >
        <ImageView
            android:id="@+id/btnconsultation"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:background="@color/transparent"
            android:src="@drawable/rectangleonefortyeight"
            ></ImageView>

        <ImageView
            android:id="@+id/btnconsultationbg"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="115dp"
            android:background="@color/transparent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/rectangleonefiftythree"></ImageView>

        <ImageView
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:src="@drawable/consultation">

        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/records"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/btnrecords"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:background="@color/transparent"
            android:src="@drawable/rectangleonefortynine"
            ></ImageView>

        <ImageView
            android:id="@+id/btnrecordsbg"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="115dp"
            android:background="@color/transparent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/rectangleonefiftythree"></ImageView>

        <ImageView
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:src="@drawable/records">

        </ImageView>
    </RelativeLayout>

</LinearLayout>

<LinearLayout
    android:id="@+id/other"
    android:layout_below="@+id/imageslinks"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/nearbydocs"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/nearbydoctors"></ImageView>
    <ImageView
        android:id="@+id/viewmore"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/viewmore">
    </ImageView>

</LinearLayout>

<RelativeLayout
    android:id="@+id/list"
    android:layout_below="@+id/other"
    android:layout_width="match_parent"
    android:layout_height="158dp">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/rectangleonefifty"></ImageView>
    <ImageView
        android:id="@+id/backgroundpic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="60dp"
        android:src="@drawable/ellipseseven">
    </ImageView>

    <ImageView
        android:id="@+id/doctorname"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/drmikeibon"></ImageView>
    <ImageView
        android:id="@+id/occupation"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/doctorname"
        android:layout_marginStart="150dp"
        android:src="@drawable/physiatristdoctor">
    </ImageView>

    <ImageView
        android:id="@+id/location"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/occupation"
        android:layout_marginStart="150dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/abujanigeria"></ImageView>
    <ImageView
        android:id="@+id/star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="320dp"
        android:src="@drawable/rating">
    </ImageView>
    <ImageView
        android:id="@+id/starrate"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/onhundred"
        android:layout_marginStart="315dp">
    </ImageView>

</RelativeLayout>

<RelativeLayout
    android:id="@+id/belowbuttons"
    android:layout_below="@id/list"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_height="100dp">

    <ImageButton
        android:id="@+id/btnChat"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:src="@drawable/chat">

    </ImageButton>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="160dp"
        >

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/ellipsethree">

        </ImageButton>
        <ImageButton
            android:id="@+id/btnMenucenter"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/ellipsefour">

        </ImageButton>
        <ImageButton
            android:id="@+id/btnMenugrid"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/grid">

        </ImageButton>

    </RelativeLayout>


    <ImageButton
        android:id="@+id/btnProfile"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:src="@drawable/profile">

    </ImageButton>

</RelativeLayout>

</RelativeLayout>