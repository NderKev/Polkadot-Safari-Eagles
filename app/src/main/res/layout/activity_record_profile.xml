<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#504AFA"
    tools:context=".RecordProfile">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/chevronleft"
            >
        </ImageButton>
        <ImageView
            android:id="@+id/settings"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/recordstitle">
        </ImageView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/nextuser"
        android:layout_below="@+id/top"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/rectangleonefiftyfive"></ImageView>
        <ImageView
            android:id="@+id/backgroundpic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/rectangleonefiftyfour">
        </ImageView>
        <ImageView
            android:id="@+id/doctorname"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="120dp"
            android:src="@drawable/johnwills">
        </ImageView>
        <ImageView
            android:id="@+id/occupation"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/doctorname"
            android:layout_marginStart="110dp"
            android:src="@drawable/motorengineers">
        </ImageView>
        <ImageView
            android:id="@+id/star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="320dp"
            android:src="@drawable/chevronright">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list"
        android:layout_below="@+id/nextuser"
        android:layout_width="match_parent"
        android:layout_height="158dp">

        <ImageView
            android:id="@+id/listdoc"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/rectangleonefifty"></ImageView>
        <ImageView
            android:id="@+id/listdocpic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/ellipseseven">
        </ImageView>

        <ImageView
            android:id="@+id/doctornamelist"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/drmikeibon"></ImageView>
        <ImageView
            android:id="@+id/occupationlist"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/doctornamelist"
            android:layout_marginStart="150dp"
            android:src="@drawable/physiatristdoctor">
        </ImageView>

        <ImageView
            android:id="@+id/locationlist"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/occupationlist"
            android:layout_marginStart="150dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/abujanigeria"></ImageView>
        <ImageView
            android:id="@+id/starlist"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="320dp"
            android:src="@drawable/rating">
        </ImageView>
        <ImageView
            android:id="@+id/starrate"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/onhundred"
            android:layout_marginStart="315dp">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/belowbuttons"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/chat">

        </ImageButton>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginStart="160dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:src="@drawable/ellipsethree">

            </ImageButton>

            <ImageButton
                android:id="@+id/btnMenucenter"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:src="@drawable/ellipsefour">

            </ImageButton>

            <ImageButton
                android:id="@+id/btnMenugrid"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:src="@drawable/grid">

            </ImageButton>

        </RelativeLayout>


        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/profile">

        </ImageButton>

    </RelativeLayout>



</RelativeLayout>