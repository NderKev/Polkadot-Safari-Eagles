<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".Settings">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/chevronleft"
            >
        </ImageButton>
        <ImageView
            android:id="@+id/settings"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/settings">
        </ImageView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/nextuser"
        android:layout_below="@+id/top"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/rectangleonefiftyfive"></ImageView>
        <ImageView
            android:id="@+id/backgroundpic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/rectangleonefiftyfour">
        </ImageView>
        <ImageView
            android:id="@+id/doctorname"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="120dp"
            android:src="@drawable/johnwills">
        </ImageView>
        <ImageView
            android:id="@+id/occupation"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/doctorname"
            android:layout_marginStart="110dp"
            android:src="@drawable/motorengineers">
        </ImageView>
        <ImageView
            android:id="@+id/star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="320dp"
            android:src="@drawable/chevronright">
        </ImageView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/belownext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/nextuser"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myaccount"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/myaccount"></ImageView>

        <ImageView
            android:id="@+id/seeall"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/seeall"></ImageView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/myaccountsettingspersonaldata"
        android:layout_below="@+id/belownext"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/personaldatapicbg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/rectangleonefiftysix">

        </ImageView>
        <ImageView
            android:id="@+id/personaldatapic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="42dp"
            android:src="@drawable/database"
            ></ImageView>
        <ImageView
            android:id="@+id/txtpersonaldata"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="125dp"
            android:src="@drawable/personaldata">
        </ImageView>
        <ImageButton
            android:id="@+id/btnpersonaldataback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="350dp"
            android:background="@color/transparent"
            android:src="@drawable/chevronright">
        </ImageButton>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/myaccountsettingsemailpayment"
        android:layout_below="@+id/myaccountsettingspersonaldata"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/emailpaymentpicbg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/rectangleonefiftysix">
        </ImageView>
        <ImageView
            android:id="@+id/emailpaymentpic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="42dp"
            android:src="@drawable/mail">
        </ImageView>
        <ImageView
            android:id="@+id/txtemailpayment"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="120dp"
            android:src="@drawable/emailnpayment"
            >
        </ImageView>
        <ImageButton
            android:id="@+id/btnemailpaymentback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="350dp"
            android:background="@color/transparent"
            android:src="@drawable/chevronright">
        </ImageButton>


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/othersettingstitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/myaccountsettingsemailpayment"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myaccountothersettings"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/othersettings"></ImageView>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/othersettingspersonaldata"
        android:layout_below="@+id/othersettingstitle"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/othersettingspicbg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/rectangleonefiftysix">

        </ImageView>
        <ImageView
            android:id="@+id/othersettingspic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="42dp"
            android:src="@drawable/mappin">
        </ImageView>
        <ImageView
            android:id="@+id/txtothersettings"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="125dp"
            android:src="@drawable/personaldata">
        </ImageView>
        <ImageButton
            android:id="@+id/btnothersettingsback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="350dp"
            android:background="@color/transparent"
            android:src="@drawable/chevronright">
        </ImageButton>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/othersettingsmyaccountsettingsemailpayment"
        android:layout_below="@+id/othersettingspersonaldata"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/othersettingsemailpaymentpicbg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/rectangleonefiftysix">

        </ImageView>
        <ImageView
            android:id="@+id/othersettingsemailpaymentpic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="42dp"
            android:src="@drawable/calendar">
        </ImageView>
        <ImageView
            android:id="@+id/txtemailpaymentothersettings"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="120dp"
            android:src="@drawable/emailnpayment">
        </ImageView>
        <ImageButton
            android:id="@+id/btnemailpaymentbackothersettings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="350dp"
            android:background="@color/transparent"
            android:src="@drawable/chevronright">
        </ImageButton>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/belowbuttons"
        android:layout_below="@id/othersettingsmyaccountsettingsemailpayment"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="120dp">

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/chat">

        </ImageButton>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginStart="160dp"
            >

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:src="@drawable/ellipsethree">

            </ImageButton>
            <ImageButton
                android:id="@+id/btnMenucenter"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:src="@drawable/ellipsefour">

            </ImageButton>
            <ImageButton
                android:id="@+id/btnMenugrid"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:src="@drawable/grid">

            </ImageButton>

        </RelativeLayout>


        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/profile">

        </ImageButton>

    </RelativeLayout>

</RelativeLayout>