<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#504AFA"
    tools:context=".RecordsQRScan">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/chevronleft"
            >
        </ImageButton>
        <ImageView
            android:id="@+id/settings"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/recordstitle">
        </ImageView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/nextuser"
        android:layout_below="@+id/top"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">


        <ImageButton
            android:id="@+id/backgroundn"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/reccs"></ImageButton>

        <ImageButton
            android:id="@+id/background"
            android:layout_width="353dp"
            android:layout_height="265dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@color/transparent"
            android:src="@drawable/oip"></ImageButton>


    </RelativeLayout>

    <ImageView
        android:id="@+id/backgroundauthorization"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/nextuser"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/rec"></ImageView>

    <ImageView
        android:id="@+id/backgroundpic"
        android:layout_width="284dp"
        android:layout_height="46dp"
        android:layout_below="@id/nextuser"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/authorize"></ImageView>
    <RelativeLayout
        android:id="@+id/belowbuttons"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/chat">

        </ImageButton>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginStart="160dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:src="@drawable/ellipsethree">

            </ImageButton>

            <ImageButton
                android:id="@+id/btnMenucenter"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:src="@drawable/ellipsefour">

            </ImageButton>

            <ImageButton
                android:id="@+id/btnMenugrid"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:src="@drawable/grid">

            </ImageButton>

        </RelativeLayout>


        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/profile">

        </ImageButton>

    </RelativeLayout>

</RelativeLayout>